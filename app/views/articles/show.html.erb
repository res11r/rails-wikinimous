<div class="container">
<h1>
<%= @article.title %>
<%= link_to edit_article_path(@article) do %>
<i class="fa-solid fa-pen-to-square"></i>
<% end %>
<%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure?" } do %>
<i class="fa-solid fa-trash-can"></i>
<% end %>
</h1>
<hr>
<p><%= @article.content %></p>

</div>
